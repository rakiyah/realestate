
<h2>Properties Page</h2>

<table id="properties-table">
    <thead>
        <tr>
            <th>Property ID</th>
            <th>Address</th>
            <th>Listed Price</th>
            <th>Buyer</th>
            <th>Buyer's Agent</th>
            <th>Seller</th>
            <th>Seller's Agent</th>
            <th>On Market</th>
            <th>Sell Price</th>
            <th>Sell Date</th>
        </tr>
    </thead>

    <tbody id="properties-tbody">
        {{#each data}}
        <tr>
            <td>{{this.property_id}}</td>
            <td>{{this.address}}</td>
            <td>${{this.listed_price}}</td>
            <td>{{this.buyer_name}}</td>
            <td>{{this.buyer_agent}}</td>
            <td>{{this.seller_name}}</td>
            <td>{{this.seller_agent}}</td>
            <td>{{this.on_market}}</td>
            <td>${{this.sell_price}}</td>
            <td>{{this.sell_date}}</td>
            <td><button onclick="deleteProperty({{this.property_id}})">DELETE</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete-property.js"></script>

<h4>Search for a Property by Agent Name</h4>
<form id="search-property" method="GET" action="/properties">
    <label for="input-name">Search by first name</label>
    <input type="text" name="name" id="input-name-search">

    <input type="submit" class="submit-btn">
    <a href='/'><button class="reset-btn">Reset</button></a>
</form>
<p></p>


<h4>Add a new Property</h4>
<form id="add-property-form">
    <label for="input-address">Address: </label>
    <input type="text" name="input-address" id="input-address">

    <label for="input-lprice">Listed Price: </label>
    <input type="number" step="0.01" id="input-lprice" name="input-lprice">

    <select name="input-sellerid" id="input-sellerid">
        <option value="">Select a Seller</option>
        {{#each sellers}}
        <option value="{{this.seller_id}}">{{this.name}}</option>
        {{/each}}
    </select>

    <label class="label-checkbox" for="input-market">On Market: </label>
    <input type="checkbox" id="input-market" name="on_market" value="1">

    <input type="submit" class="submit-btn">
</form>
<script src="./js/add-property.js"></script>

<h4>Update a Property</h4>
<form id="put-property-form">
    <select name="select-address-update" id="select-address-update">
        <option value="">Select a Property to update</option>
        {{#each data}}
        <option value="{{this.property_id}}">{{this.address}}</option>
        {{/each}}
    </select>

    <label for="input-address-update">Address: </label>
    <input type="text" name="input-address-update" id="input-address-update">

    <label for="input-lprice-update">Listed Price: </label>
    <input type="number" step="0.01" id="input-lprice-update" name="input-lprice-update">

    <select name="input-buyerid-update" id="input-buyerid-update">
        <option value="">Select a Buyer</option>
        {{#each buyers}}
        <option value="{{this.buyer_id}}">{{this.name}}</option>
        {{/each}}
    </select>

    <select name="input-sellerid-update" id="input-sellerid-update">
        <option value="">Select a Seller</option>
        {{#each sellers}}
        <option value="{{this.seller_id}}">{{this.name}}</option>
        {{/each}}
    </select>

    <label class="label-checkbox" for="input-market-update">On Market: </label>
    <input type="checkbox" id="input-market-update" name="on_market" value="1">

    <label for="sell-price-update">Sell Price: </label>
    <input type="number" step="0.01" id="sell-price-update">

    <label for="sell-date-update">Sell Date: </label>
    <input type="date" id="sell-date-update">

    <input type="submit" class="submit-btn">
</form>

<script src="./js/update-property.js"></script>

