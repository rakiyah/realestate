<h1>Potential Buyers</h1>

<table id="buyers-table">
    <thead>
        <tr>
            <th>Buyer ID</th>
            <th>Email</th>
            <th>Phone #</th>
            <th>Name</th>
            <th>Agent</th>
        </tr>
    </thead>

    <tbody>
        {{#each data}}
        <tr>
            <td>{{this.buyer_id}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phone}}</td>
            <td>{{this.name}}</td>
            <td>
                {{this.agent_name}}</td>
            <td><button onclick="deleteBuyer({{this.buyer_id}})">DELETE</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>

<script src="./js/delete-buyer.js"></script>

<h4>Add a new Potential Buyer</h4>
<form id="add-buyer-form">
    <label for="input-email">Email: </label>
    <input type="text" name="input-email" id="input-email">

    <label for="input-phone">Phone: </label>
    <input type="text" name="input-phone" id="input-phone">

    <label for="input-name">Name: </label>
    <input type="text" name="input-name" id="input-name">

    <select name="input-agentid" id="input-agentid">
        <option value="">Select an Agent</option>
        {{#each agents}}
        <option value="{{this.agent_id}}">{{this.name}}</option>
        {{/each}}
        <option value="NULL">None</option>
    </select>

    <input type="submit" class="submit-btn">
</form>

<script src="./js/add-buyer.js"></script>

<h4>Update a Potential Buyer: </h4>
<form id="update-buyer-form">
    
    <select name="select-buyer" id="select-buyer">
        <option value="">Select a Potential Buyer to update</option>
        {{#each data}}
        <option value="{{this.buyer_id}}">{{this.name}}</option>
        {{/each}}
    </select>
    
    <label for="input-name-update">Name:</label>
    <input type="text" name="input-name-update" id="input-name-update">

    <label for="input-email-update">Email:</label>
    <input type="text" name="input-email-update" id="input-email-update">

    <label for="input-phone-update">Phone:</label>
    <input type="text" name="input-phone-update" id="input-phone-update">

    <label for="input-agent-update">Agent:</label>
    <select name="input-agent-update" id="select-agent-update">
        <option value="">Change Agent</option>
        {{#each agents}}
        <option value="{{this.agent_id}}">{{this.name}}</option>
        {{/each}}
        <option value="NULL">None</option>
    </select>

    <input type="submit" class="submit-btn">
</form>
<script src="./js/update-buyer.js"></script>