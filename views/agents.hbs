<script src="./js/confirm-delete-a.js"></script>
<h1>Agents</h1>

<table id="agents-table">
    <thead>
        <tr>
            <th>Agent ID</th>
            <th>Email</th>
            <th>Phone #</th>
            <th>Full Name</th>
        </tr>
    </thead>

    <tbody>
        {{#each data}}
        <tr>
            <td>{{this.agent_id}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phone}}</td>
            <td>{{this.name}}</td>
            
            <td><button onclick="deleteAgent({{this.agent_id}})">DELETE</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete-agent.js"></script>

<h4>Add new Agent: </h4>
<form id="add-agent-form">
    <label for="input-email">Email: </label>
    <input type="text" name="input-email" id="input-email">

    <label for="input-phone">Phone: </label>
    <input type="text" name="input-phone" id="input-phone">

    <label for="input-name">Name: </label>
    <input type="text" name="input-name" id="input-name">

    <input type="submit" class="submit-btn">
</form>

<script src="./js/add-agent.js"></script>

<h4>Update an Agent: </h4>
<form id="update-agent-form">

    <label for="select-agent">Name: </label>
    <select name="select-agent" id="select-agent">
        <option value="">Select an Agent to update</option>
        {{#each data}}
        <option value="{{this.agent_id}}">{{this.name}}</option>
        {{/each}}
    </select>

    <label for="input-name">Name: </label>
    <input type="text" name="input-name" id="input-name-update">

    <label for="input-email">Email: </label>
    <input type="text" name="input-email" id="input-email-update">

    <label for="input-phone">Phone: </label>
    <input type="text" name="input-phone" id="input-phone-update">

    <input type="submit" class="submit-btn">
</form>

<script src="./js/update-agent.js"></script>